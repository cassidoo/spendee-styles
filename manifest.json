{
  "name": "Spendee Styles",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Beautify the Spendee (online Splendor) site",
  "homepage_url": "http://github.com/cassidoo/spendee-styles",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://splendor.wwwbgs.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://splendor.wwwbgs.com/"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}
